@model EstacaoModel

@{
    ViewData["Title"] = "Estação";
}

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>

@{
    var vDescricao = string.Empty;
    var vTipo = string.Empty;

    try
    {
        vDescricao = @ViewBag.Registro.Descricao;
        vTipo = @ViewBag.Registro.Tipo.ToString();
    }
    catch { }
}

<h2>Cadastro de Estação</h2>
<br />

<div class="col-md-8 order-md-1" style="background-color: ghostwhite; border-radius: 10px;  padding:20px;">
    <form asp-controller="Estacao" asp-action="Registrar" class="needs-validation" novalidate>
      
        <div class="mb-3">
            <label for="Descricao">Descrição da estação:</label>
            <input type="text" class="form-control" asp-for="Descricao" required>
            <div class="invalid-feedback">
                O campo Descrição é obrigatório.
            </div>
        </div>


        <div class="form-group">
            <label>Tipo:</label>
            @{
                if (vTipo == "0")
                {
                    <div class="radio"><label><input type="radio" asp-for="Tipo" value="0" checked>Onshore</label></div>
                    <div class="radio"><label><input type="radio" asp-for="Tipo" value="1" unchecked>Offshore</label></div>
                }
                else
                {
                    <div class="radio"><label><input type="radio" asp-for="Tipo" value="0" unchecked>Onshore</label></div>
                    <div class="radio"><label><input type="radio" asp-for="Tipo" value="1" checked>Offshore</label></div>
                }
            }
        </div>

        <button type="submit" class="btn btn-block btn-success ">Cadastrar</button>

    </form>
</div>


