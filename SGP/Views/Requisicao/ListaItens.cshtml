
<div style="background-color: ghostwhite; border-radius: 10px; padding:20px; width:800px">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Descrição</th>
                <th> </th>
                <th>Estoque</th>
                <th>Quantidade</th>
                <th> </th>
            </tr>
        </thead>

        @{
            foreach (var item in (List<EquipamentoModel>)ViewBag.ListaItem)
            {
                if (@item.Status.ToString() != "Indisponível")
                {
                    <tbody>
                                <tr>
                                    <td>@item.Descricao.ToString()</td>
                                    <td><img src="@item.ImagemPath.ToString()" width="50" height="50" /></td>
                                    <td class="text-center">@item.Quantidade.ToString()</td>
                                    <td class="text-center"><input type="number" id="qtd" style="width:60px"></td>
                                    <td><button type="button" class=" btn btn-primary" onclick="Add('@item.Id.ToString()')">Adicionar</button></td>
                                </tr>
                    </tbody>
                }
            }
        }
    </table>
</div>




<script>
    function Add(id) {
        var qtd = document.getElementById('qtd');
        window.location.href = "../Requisicao/ListaItens/" + id&qtd;
        window.close();
    }
</script>