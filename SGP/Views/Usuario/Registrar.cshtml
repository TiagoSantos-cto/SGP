@model UsuarioModel

@{
    ViewData["Title"] = "Usuário";
}

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>


<div class="row text-left" style="padding-left: 30px;">
    <div>
        <h2>Usuário</h2>
        <h6>Cadastro de usuário do sistema</h6>
    </div>
    <div style="padding-left: 30px;">
        <img src="~/images/user-icon.png" width="63" height="63" />
    </div>
</div>
<br />

<div class="col-md-8 order-md-1" style="background-color: ghostwhite; border-radius: 10px;  padding:20px;">
    <form asp-controller="Usuario" asp-action="Registrar" class="needs-validation" novalidate>

        <div class="mb-3">
            <label>Funcionário:</label>
            <select asp-for="IdFuncionario" class="form-control" style="width: 300px">
                <option>Selecionar...</option>
                @{
                    foreach (var item in (List<UsuarioModel>)ViewBag.ListaFuncionario)
                    {

                        <option value="@item.IdFuncionario.ToString()" onclick="CarregarTela(@item.IdFuncionario.ToString())">@item.IdFuncionario.ToString() - @item.Nome.ToString()</option>
                    }
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="email">Email: <span class="text-muted" /></label>
            <input type="email" class="form-control" asp-for="Email" placeholder="nome@exemplo.com" id="email">
            <div class="invalid-feedback">
                O campo email é obrigatório.
            </div>
        </div>

        <div class="mb-3">
            <label for="pwd">Senha:<span class="text-muted" /></label>
            <input type="password" class="form-control" asp-for="Senha" id="senha">
        </div>

        <div class="row">
            <div class="col-md-4 mb-3">
                <label for="funcao">Perfil de acesso:</label>
                <select class="custom-select d-block w-100" asp-for="PerfilAcesso" id="perfilAcesso" required >
                    <option>Selecionar...</option>
                    <option value="0">Administrador</option>
                    <option value="1">Usuário</option>
                </select>
                <div class="invalid-feedback">
                    Selecione a função no sistema.
                </div>
            </div>
            
            <div class="col-md-4 mb-3">
                <label for="inativo">Inativo:</label>
                <input asp-for="Inativo" type="checkbox" id="inativo"/>
            </div>

        </div>
  
        <button type="submit" class="btn btn-block btn-success ">Cadastrar</button>

    </form>
</div>

<script>
    function CarregarTela(IdFuncionario) {

       // window.location.href = "../Usuario/ObterUsuario/" + IdFuncionario;

    }
</script>


